@model AppLaundry.Models.Customer
@{
    ViewData["Title"] = "Lista de clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper" style="padding:1rem;">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <h3>@ViewData["Title"] </h3>
                </div>
                <div class="col-6" >
                    <a asp-area="Main" asp-controller="Customers" asp-action="Create" class="btn btn-success">
                        Alta cliente
                    </a>
                </div>
            </div>

            <table id="tablaClientes" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>No. Cliente</th>
                        <th>Apellidos</th>
                        <th>Nombres</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/customer.js"></script>
}
